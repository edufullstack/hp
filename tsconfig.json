{
  "compilerOptions": {
    "resolveJsonModule": true,
    /* other options */
    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "module": "nodenext",
    "target": "es2022",
    /* Modules */
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
